<!-- app/views/bookings/_invoice_table.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4">Invoice for Booking #<%= @booking.id %></h1>

  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th scope="col">Attribute</th>
        <th scope="col">Value</th>
      </tr>
    </thead>
    <tbody>
      <% @booking_details.each do |attribute, value| %>
        <tr>
          <td><strong><%= attribute %></strong></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
