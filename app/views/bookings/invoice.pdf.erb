<!-- app/views/bookings/invoice.pdf.erb -->
<div class="container mt-5">
  <div class="invoice-container">
    <h1>Invoice for Booking #<%= @booking.id %></h1>

    <table style="border-collapse: collapse; width: 100%;">
      <thead style="background-color: #f8f9fa;">
        <tr>
          <th style="border: 1px solid #dee2e6; padding: 8px;">Attribute</th>
          <th style="border: 1px solid #dee2e6; padding: 8px;">Value</th>
        </tr>
      </thead>
      <tbody>
        <% @booking_details.each do |attribute, value| %>
          <tr>
            <td style="border: 1px solid #dee2e6; padding: 8px;"><%= attribute %></td>
            <td style="border: 1px solid #dee2e6; padding: 8px;"><%= value %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>