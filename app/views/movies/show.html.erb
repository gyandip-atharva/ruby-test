<h1><%= @movie.title %></h1>

<p><%= @movie.description %></p>

<% if @rating %>
  <p>Your rating: <%= @rating.value %></p>
<% else %>
  <%= form_tag rate_movie_path(@movie), method: :post do %>
    <%= label_tag 'value', 'Rate this movie:' %>
    <%= select_tag 'value', options_for_select([1, 2, 3, 4, 5]) %>
    <%= submit_tag 'Submit Rating' %>
  <% end %>
<% end %>
<%= link_to 'Back', movies_path %>